@model COMP003B.FinalProject.PedroG.Models.Mechanic

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>Mechanic</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="MechanicId" />
            <div class="form-group">
                <label asp-for="MechanicName" class="control-label"></label>
                <input asp-for="MechanicName" class="form-control" />
