            </div>
            <div class="form-group">
                <label asp-for="MechanicDescription" class="control-label"></label>
                <input asp-for="MechanicDescription" class="form-control" />
                <span asp-validation-for="MechanicDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MechanicEmail" class="control-label"></label>
                <input asp-for="MechanicEmail" class="form-control" />
                <span asp-validation-for="MechanicEmail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MechanicPhone" class="control-label"></label>
                <input asp-for="MechanicPhone" class="form-control" />
                <span asp-validation-for="MechanicPhone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
